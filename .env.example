# PostgreSQL Database Configuration
# Copy this to your .env file and update the values accordingly

# Option 1: Use individual connection parameters
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bottrapper
DB_USER=postgres
DB_PASSWORD=your_password_here

# Option 2: Use a complete connection string (this takes precedence over individual params)
# DATABASE_URL=postgresql://username:password@localhost:5432/bottrapper

# For production with SSL (e.g., Heroku, Railway, etc.)
# DATABASE_URL=postgresql://username:password@hostname:5432/database?sslmode=require

# Legacy SQLite path (only needed for migration)
SQLITE_DATABASE_PATH=./data/bot.db
